@model IEnumerable<ABCD_Admin.Models.Seat>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="overview-wrap">
            <h2 class="title-1 m-b-25">Seat</h2>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive table--no-card m-b-40">
            <table class="table table-borderless table-striped table-earning">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.seatName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.isVipSeat)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.seatName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.isVipSeat)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.seatId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.seatId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.seatId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
