@model IEnumerable<ABCD_Admin.Models.RoomSeat>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="overview-wrap">
            <h2 class="title-1 m-b-25">RoomSeat</h2>
            
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive table--no-card m-b-40">
            <table class="table table-borderless table-striped table-earning">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.isAvailable)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Room.roomId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Seat.seatName)
                        </th>
                        <th></th>
                    </tr>
                </thead>
            <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.isAvailable)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Room.roomId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Seat.seatName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { roomId = item.Room.roomId, seatId = item.Seat.seatId }) |
                                @Html.ActionLink("Details", "Details", new { roomId = item.Room.roomId, seatId = item.Seat.seatId }) |
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
